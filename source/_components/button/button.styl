.button {
  display: block;
  text-align: center;
  margin: 0 auto;
  height: 33px;
  line-height: 33px;
  text-decoration: none;
  
  span {
    display: block;
    width: 100px;
    margin: 0 auto;
    text-align: center;
    border: 2px solid $orange;
    color: $orange;
    border-radius: 20px;
    font-family: Heebo;
    font-weight: 600;
    font-size: 13px;
    transition: all .2s ease-in;

    &:hover,
    &:focus {
      background-color: $orange;
      color: $white;
    }

  }
}