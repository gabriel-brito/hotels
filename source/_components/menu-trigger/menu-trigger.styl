.menu-trigger {
  width: 30px;
  height: 30px;
  display: block;
  position: absolute;
  left: 20px;
  top: 20px;
  
  span {
    &:first-child {
      margin-top: 0;
    }
    
    display: block;
    width: 100%;
    height: 5px;
    margin: 5px auto;
    background-color: $white;
    border-radius: 25px;
  }
  
  +above(tablet){
    display: none;
  }
}